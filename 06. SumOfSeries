// 6. program that, for a given two integer numbers N and X, calculates the sumS = 1 + 1!/X + 2!/X2 + â€¦ + N!/XN

using System;

namespace SumOfSeries
{
    class SumOfSeries
    {
        static void Main()
        {
            Console.WriteLine("Please enter N = ");
            int n = int.Parse(Console.ReadLine());
            Console.WriteLine("Please enter X = ");
            int x = int.Parse(Console.ReadLine());
            double sum = 1;
            int nFactorial = 1;
            int xExponent = 1;
            for (int i = 1; i <= n; i++)
            {
                nFactorial = 1;
                xExponent = 1;
                for (int j = 1; j <= i; j++)
                {
                    nFactorial *= i;
                    xExponent *= x;
                }
                sum += nFactorial / xExponent;
            }
            Console.WriteLine("Sum S = {0}", sum);
        }
    }
}
