// 12. Program that reads from the console a positive integer number N (N < 20) and outputs a matrix.

using System;

namespace MatrixIntegerNumber
{
    class MatrixIntegerNumber
    {
        static void Main()
        {
            Console.WriteLine("Enter N: \n N < 20");
            int n = int.Parse(Console.ReadLine());
            Console.WriteLine();
            for (int row = 1; row <= n; row++)
            {
                for (int number = row; number < (row + n); number++)
                {
                    Console.Write("{0,3}", number);
                }
                Console.WriteLine();
                Console.WriteLine();
            }
            Console.WriteLine();
        }
    }
}
